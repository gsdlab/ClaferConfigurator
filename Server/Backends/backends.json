{
    "backends": [
        {
            "id": "alloyIG", 
            "label": "ClaferIG - Alloy Instance Generator", 
            "tooltip": "Classic IG based on Alloy solver",
            "accepted_format": "clafer_source",               
            "tool": "claferIG", 
            "tool_args": ["$filepath$", "--useuids", "--addtypes"],
            "tool_version_args": ["-V"],
            "scope_options": {
                "global_scope" : {"command": "s $value$\n"}, 
                "bitwidth" : {"command": "b $value$\n"},                 
                "individual_scope": {"command": "s $clafer$ $value$\n"}
            },
            "control_buttons": [
                {"id": "next_instance", "command": "\n", "label" : "Get Instances", "tooltip": "Generate the specified numbe of instances"}, 
                {"id": "quit", "command": "q\n", "label" : "Quit", "tooltip": "Exit the IG safely"}                
            ]            
        }
    ]   
}